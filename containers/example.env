# containers.env

# This is required backup-container.sh
# Author: Thomas Lutkus


# Unique container identifier
CONTAINER_NAME="my-container"

# Absolute path to the volume or data directory to back up
VOLUME_PATH="/srv/my-container/data"

# Optional tar exclusions (space-separated, quoted if needed)
# Example: EXCLUDE_PATTERNS="--exclude='cache' --exclude='*.log'"
EXCLUDE_PATTERNS=""

# Remote server (IP or hostname) to receive backups
REMOTE_HOST="backup-server.local"

# Remote path on the backup server to drop the archive (should contain a 'staging' dir)
REMOTE_PATH="/mnt/backups/my-container"

# Optional: SSH port (default is 22)
# SSH_PORT=2222

